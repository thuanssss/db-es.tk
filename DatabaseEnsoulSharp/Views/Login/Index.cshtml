@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Login </title>
    <link href="~/lobibox/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lobibox/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lobibox/css/login.css" rel="stylesheet" />
</head>
<body style="background: url(https://static.pexels.com/photos/36767/tree-natur-nightsky-cloud.jpg)  no-repeat;">
    <div class="login-wrapper fadeInDown animated">
        <form id="form" onsubmit="return EventLoginStaff();" data-toggle="validator" role="form" class="form-horizontal lobi-form login-form visible">
            <div class="login-header">
                Login
            </div>
            <div class="login-body no-padding">
                <fieldset>
                    <div class="form-group">
                        <label>Username</label>
                        <label class="input">
                            <span class="input-icon input-icon-prepend fa fa-user"></span>
                            <input type="text" required="required" id="codeStaff" name="username" value="" placeholder="Username">
                            <span class="tooltip tooltip-top-left"><i class="fa fa-user text-cyan-dark"></i>Xin vui lòng nhập mã nhân viên</span>
                        </label>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <label class="input">
                            <span class="input-icon input-icon-prepend fa fa-key"></span>
                            <input required="required" type="password" id="password" name="password" placeholder="Password">
                            <span class="tooltip tooltip-top-left"><i class="fa fa-key text-cyan-dark"></i>Xin vui lòng nhập password</span>
                        </label>

                    </div>


                    <div class="row">

                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-info btn-block"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Login</button>
                        </div>
                    </div>
                </fieldset>
            </div>

        </form>

    </div>

    <script src="~/lobibox/js/lib/jquery.min.js"></script>
    <script src="~/lobibox/js/bootstrap/bootstrap.min.js"></script>

    <script type="text/javascript">
    function EventLoginStaff() {
        debugger;
            $.ajax({
                type: 'POST',
                url: '/Login/ActionLogin',
                data: JSON.stringify({ UserName: $("#codeStaff").val(), Password: $("#password").val() }),
                contentType: 'application/json; charset=utf-8',
                success: function (res) {
                    if (res) {
                        window.location.href = "/Admin/Index";
                    } else {
                        alert("error");
                    }
                },
                error: function () {
                    alert("error");
                }
            });

            return false;
        }
    </script>

</body>
</html>
